<base:DialogBase  
    x:Class="Client.Controls.Dialogs.PropertyGridDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Client.Controls"
    xmlns:base="clr-namespace:Client.Base;assembly=Client.Base"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <local:PropertyGrid/>
        <Button Grid.Row="1" HorizontalAlignment="Left" IsCancel="True" Click="ClickCancel">Cancel</Button>
        <Button Grid.Row="1" HorizontalAlignment="Right" Click="ClickSave">Save</Button>
    </Grid>
</base:DialogBase>
