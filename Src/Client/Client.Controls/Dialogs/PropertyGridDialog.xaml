<base:DialogBase  
    x:Class="Client.Controls.Dialogs.PropertyGridDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Client.Controls"
    xmlns:base="clr-namespace:Client.Base;assembly=Client.Base"
    mc:Ignorable="d" 
    d:DesignHeight="300" d:DesignWidth="300"
    >
    <Grid>
        <Border BorderThickness="1" Background="White" Opacity="0.75" Margin="1" Grid.RowSpan="99"/>
        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <local:PropertyGrid Margin="5"/>
            <Button Margin="5" Padding="5" Grid.Row="1" HorizontalAlignment="Left" IsCancel="True" Click="ClickCancel">Cancel</Button>
            <Button Margin="5" Padding="5" Grid.Row="1" HorizontalAlignment="Right" Click="ClickSave">Save</Button>
        </Grid>
    </Grid>
</base:DialogBase>
