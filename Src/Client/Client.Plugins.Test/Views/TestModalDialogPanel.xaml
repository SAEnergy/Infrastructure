<mybase:PanelBase 
    x:Class="Client.Plugins.Test.TestModalDialogs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:Client.Plugins.Test"
    xmlns:mybase="clr-namespace:Client.Base;assembly=Client.Base"
    mc:Ignorable="d" 
    >
    <Grid>
        <Border BorderThickness="1" Background="White" Opacity="1" Margin="0"/>
        <StackPanel>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5" Margin="5" Click="ClickModalBackgroundTask">Modal Background Task</Button>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Padding="5" Margin="5" Click="ClickCancellableBackgroundTask">Cancellable Background Task</Button>
        </StackPanel>
    </Grid>
</mybase:PanelBase>
